<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/alert_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1A1A1A"
        android:navigationIcon="@android:drawable/ic_media_previous"
        app:title="@string/alert_detail_title"
        app:titleTextColor="#F5F0E6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ai.clawphones.agent.chat.BoundingBoxImageView
                android:id="@+id/alert_detail_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:adjustViewBounds="true"
                android:background="#111111"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_report_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/clawphones_card_bg"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_type_label"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/alert_detail_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#F5F0E6"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/alert_confidence_label"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/alert_detail_confidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#F5F0E6"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/alert_time_label"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/alert_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#F5F0E6"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/alert_location_label"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/alert_detail_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#F5F0E6"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/alert_detail_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/clawphones_button_bg"
                    android:text="@string/alert_share"
                    android:textAllCaps="false"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/alert_detail_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/clawphones_button_outline_bg"
                    android:text="@string/alert_delete"
                    android:textAllCaps="false"
                    android:textColor="#E35D5D" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
