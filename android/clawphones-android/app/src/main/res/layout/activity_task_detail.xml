<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clawphones_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/task_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/clawphones_background"
        android:navigationIcon="@android:drawable/ic_media_previous"
        app:title="@string/task_detail_title"
        app:titleTextColor="@color/clawphones_on_background" />

    <ScrollView
        android:id="@+id/task_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/task_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/clawphones_on_background"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_detail_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/clawphones_card_bg"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/clawphones_on_background"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/task_detail_reward"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/clawphones_card_bg"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/clawphones_accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/clawphones_card_bg"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:textColor="@color/clawphones_on_background"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/task_description_label"
                android:textColor="@color/clawphones_secondary_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/task_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/clawphones_on_background"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/task_detail_requirements_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/task_requirements_label"
                android:textColor="@color/clawphones_secondary_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/task_detail_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/clawphones_on_background"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/task_location_label"
                android:textColor="@color/clawphones_secondary_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/task_detail_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/clawphones_on_background"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/task_time_label"
                android:textColor="@color/clawphones_secondary_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/task_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/clawphones_on_background"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/task_detail_assigned_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/clawphones_secondary_text"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/task_progress_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_progress_label"
                    android:textColor="@color/clawphones_secondary_text"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/task_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progressTint="@color/clawphones_accent" />

                <TextView
                    android:id="@+id/task_detail_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/clawphones_secondary_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_results_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_results_label"
                    android:textColor="@color/clawphones_secondary_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/task_detail_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/clawphones_card_bg"
                    android:padding="12dp"
                    android:textColor="@color/clawphones_on_background"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/task_button_accept"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/clawphones_button_bg"
            android:text="@string/task_button_accept"
            android:textColor="@color/clawphones_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/task_button_start"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/clawphones_button_bg"
            android:text="@string/task_button_start"
            android:textColor="@color/clawphones_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/task_button_complete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/clawphones_button_bg"
            android:text="@string/task_button_complete"
            android:textColor="@color/clawphones_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
