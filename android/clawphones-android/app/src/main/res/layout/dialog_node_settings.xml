<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/node_mode_settings_relay_url"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/node_settings_relay_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/clawphones_input_bg"
            android:hint="@string/node_mode_settings_relay_url_hint"
            android:inputType="textUri"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/clawphones_on_background"
            android:textColorHint="@color/clawphones_secondary_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/node_mode_settings_frame_rate"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/node_settings_frame_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/node_mode_settings_jpeg_quality"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/node_settings_jpeg_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/node_mode_settings_motion_sensitivity"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/node_settings_motion_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/node_mode_settings_min_battery"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/node_settings_min_battery_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="20%"
            android:textColor="@color/clawphones_accent"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/node_settings_min_battery_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/node_settings_wifi_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/node_mode_settings_wifi_only"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
