<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_conversation_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/alert_item_thumbnail"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:contentDescription="@string/alert_thumbnail_desc"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_report_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alert_item_type_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="#E8A853" />

            <TextView
                android:id="@+id/alert_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Person"
                android:textColor="#F5F0E6"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/alert_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10:31"
            android:textColor="#B3B3B3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/alert_item_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="置信度 96%"
            android:textColor="#8A8A8A"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
