<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_conversation_item"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/task_item_status_badge"
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@color/status_connected" />

        <TextView
            android:id="@+id/task_item_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/clawphones_secondary_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/task_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/clawphones_secondary_text"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/clawphones_on_background"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_item_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/clawphones_accent"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>
